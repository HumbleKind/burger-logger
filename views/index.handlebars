<img id"burger" src="/assets/img/burger.png" alt="burger" />

<h1>Eat-Da-Burger</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Burgers that are ready to eat!</h2>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </div>
    <div class="col">
      <h2>Devoured burgers!</h2>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="br">Burger Name:</label>
    <input type="text" id="br" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
